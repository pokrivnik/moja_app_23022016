<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pozadi"
    tools:context="com.example.hradi.moja_app_23022016.konecne">
<!--http://www.itnetwork.cz/java/android/android-programovani-graficky-navrh-aplikaci-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/angry_btn"
        android:rowCount="25"
        android:columnCount="10"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="NapÃ¤tie"
            android:id="@+id/textView"
            android:textColor="#fdfbfb"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginLeft="72dp"
            android:inputType="textMultiLine"
            android:background="#040000"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/spusti_video" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_column="1"
            android:background="#fcf8f8"
            android:minHeight="640dp"
            android:minWidth="480dp"
            android:maxHeight="1024dp"
            android:maxWidth="768dp"
            android:longClickable="true"
            android:layout_row="2"
            android:layout_marginLeft="72dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="324dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/connect"
            android:layout_column="9"
            android:layout_row="2"
            android:layout_marginLeft="977dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="53dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spusti video"
            android:id="@+id/spusti_video"
            android:layout_alignTop="@+id/connect"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="135dp" />

    </RelativeLayout>

</RelativeLayout>
